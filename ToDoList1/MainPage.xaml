<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList1.MainPage" Title="Планировщик">

    <VerticalStackLayout>
        <Button Text="Добавить проект" Clicked="AddProject_Click"/>
        <Label Text="Проекты"/>
        <ListView  x:Name="ProjectsList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                        <Label  Text="{Binding Name}"/>
                        <Button Text="Открыть" Clicked="OpenProject" HorizontalOptions="End"/>
                        </StackLayout>
                    </ViewCell> 
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList1.NewProjectPage"
             Title="NewProjectPage">
    <VerticalStackLayout>
        <Label 
            Text="Создание нового проекта"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="25"
            FontAttributes="Bold"/>
        <Label Text="Название проекта" 
               Margin="10" 
               FontSize="25"/>
        <Entry x:Name="ProjectNameEntry" FontSize="20" 
               BackgroundColor="AliceBlue" Placeholder="Введите название"/>
        <Label Text="Описание"/>
        <Entry x:Name="ProjectDescEntry" Placeholder="Введите описание"/>
        <Button Clicked="SaveProject_Clicked" Text="Создать проект"/>
    </VerticalStackLayout>
</ContentPage>
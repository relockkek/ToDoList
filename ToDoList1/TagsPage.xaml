<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList1.TagsPage"
             Title="TagsPage">
    <VerticalStackLayout>
        <StackLayout Grid.Row="1" Padding="15">
            <Label Text="Теги проекта"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,0,0,10"/>

            <Grid ColumnDefinitions="*, Auto,Auto" ColumnSpacing="10">
                <Entry x:Name="TagNameEntry"
                       Placeholder="Название тега"
                       Grid.Column="0"/>

                <Entry x:Name="TagColorEntry"
                       Placeholder="#Color"
                       Grid.Column="1"
                       WidthRequest="80"/>
                <Button Text="+"
                       Grid.Column="2"
                       BackgroundColor="#9b59b6"
                       TextColor="White"
                       Clicked="AddTag_Clicked"/>
            </Grid>
            <CollectionView x:Name="TagsCollection"
                            HeightRequest="1000"
                            Margin="5">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border HeightRequest="80"
                               BackgroundColor="{Binding Color}"
                               Margin="2">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}"
                                       TextColor="Black"
                                       FontSize="18"
                                       HorizontalOptions="Center"/>
                                <Entry x:Name="TagNameEntry"
                                       Placeholder="Введите название"
                                       HeightRequest="50"
                                       Margin="12"/>
                                <HorizontalStackLayout HorizontalOptions="Center" Margin="2">
                                    <Button x:Name="EditButton"
                                        Grid.Column="1"
                                        Margin="0,10"
                                        Text="✏️ Редактировать"
                                        Clicked="EditTag_Clicked"
                                        BackgroundColor="#007ACC"
                                        TextColor="White"
                                        CornerRadius="5"/>
                                    <Button Grid.Column="2"
                                        Text="✏️"
                                        BackgroundColor="Transparent"
                                        Clicked="EditTag_Clicked"
                                        CommandParameter="{Binding .}"/>
                                    <Button Grid.Column="3"
                                        Text="❌"
                                        BackgroundColor="Transparent"
                                        Clicked="DeleteTag_Clicked"
                                        CommandParameter="{Binding .}"/>
                                    <ScrollView Grid.Row="1" Padding="15">
                                        <VerticalStackLayout x:Name="TagsContainer" Spacing="10">
                                            
                                        </VerticalStackLayout>
                                    </ScrollView>

                                    <Grid Grid.Row="2"
                                          x:Name="ActionPanel"
                                          IsVisible="False"
                                          Padding="15"
                                          BackgroundColor="#F8F9FA"
                                          ColumnSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button x:Name="CancelButton"
                                                Text="Отмена"
                                                Clicked="CancelButton_Clicked"
                                                BackgroundColor="#6C757D"
                                                TextColor="White"
                                                Padding="15, 10"
                                                CornerRadius="5"/>

                                        <Button Grid.Column="1"
                                                x:Name="SaveButton"
                                                Text="Сохранить"
                                                Clicked="SaveButton_Clicked"
                                                BackgroundColor="#28A745"
                                                TextColor="White"
                                                Padding="15, 10"
                                                CornerRadius="5"/>
                                    </Grid>
                                    <Button Text="Удалить" 
                                            Clicked="DeleteTag_Clicked" 
                                            HeightRequest="13" 
                                            WidthRequest="110" 
                                            Background="Red" 
                                            BorderColor="Black"
                                            BorderWidth="1"
                                            FontSize="10"
                                            CommandParameter="{Binding .}"
                                            Margin="2"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>